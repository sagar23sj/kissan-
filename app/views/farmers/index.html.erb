<html>
<head> <link rel="stylesheet" type="text/css" href="index.css"> </head>
<h1><span class="yellow">List of Farmer Instruments</pan></h1>
<centre><%= link_to 'Add New Farmer ', new_farmer_path %>
<table class="container">
	<thead>
		<tr>
			<th> First Name </th>
			<th> Last Name </th>
			<th> Mobile Number </th>
			<th> E-Mail ID </th>
			<th> View Details </th>
			<th> Edit Details </th>
		</tr>
	</thead>
	<tbody>
		<% @farmers.each do |farmer| %>
	<tr>
		<td><%= farmer.first_name %></td>
		<td><%= farmer.last_name %></td>
		<td><%= farmer.mobile_number%></td>
		<td><%= farmer.email_id%></td>
		<td><%= link_to 'View', farmer_path(farmer.id) %></td>
		<td><%= link_to 'Edit', edit_farmer_path(farmer.id) %></td>
	</tr>
<% end %>
	</tbody>
</table>
</html>